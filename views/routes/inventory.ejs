            <script>
                // Add interactive vault door effect
                document.addEventListener('DOMContentLoaded', () => {
                    const vaultHeader = document.querySelector('.vault-header');

                    vaultHeader.addEventListener('click', () => {
                        vaultHeader.style.transform = 'scale(0.98)';
                        setTimeout(() => {
                            vaultHeader.style.transform = 'scale(1)';
                        }, 200);
                    });

                    // Animate items on scroll
                    const items = document.querySelectorAll('.treasure-item');

                    const observer = new IntersectionObserver((entries) => {
                        entries.forEach(entry => {
                            if (entry.isIntersecting) {
                                entry.target.style.opacity = '1';
                                entry.target.style.transform = 'translateY(0)';
                            }
                        });
                    }, { threshold: 0.1 });

                    items.forEach(item => {
                        item.style.opacity = '0';
                        item.style.transform = 'translateY(20px)';
                        item.style.transition = 'all 0.6s ease';
                        observer.observe(item);
                    });
                });
            </script>
