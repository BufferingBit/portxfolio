    <style>
        :root {
            --space: #0F0F1A;
            --gold: #FCD34D;
            --gold-light: rgba(252, 211, 77, 0.1);
            --gold-medium: rgba(252, 211, 77, 0.3);
            --gold-dark: rgba(252, 211, 77, 0.7);
            --steel: #4B5563;
            --light: #F3F4F6;
            --dimmed: #9CA3AF;
            --success: #10B981;
            --warning: #F59E0B;
            --info: #3B82F6;
        }

        body {
            background-color: var(--space);
            color: var(--light);
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
        }

        .font-cinzel {
            font-family: 'Cinzel', serif;
        }

        .text-gold {
            color: var(--gold);
        }

        .text-dimmed {
            color: var(--dimmed);
        }

        .bg-steel {
            background-color: var(--steel);
        }

        .character-card {
            background: linear-gradient(145deg, rgba(15, 15, 26, 0.7), rgba(31, 41, 55, 0.4));
            backdrop-filter: blur(8px);
            border: 1px solid var(--gold-light);
            box-shadow: 0 10px 30px rgba(15, 15, 26, 0.5);
            position: relative;
            overflow: hidden;
        }

        .character-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at center, var(--gold-light), transparent 70%);
            opacity: 0.1;
            z-index: -1;
        }

        .character-avatar {
            width: 10rem;
            height: 10rem;
            border-radius: 50%;
            background: radial-gradient(circle at center, rgba(59, 130, 246, 0.2), transparent);
            border: 3px solid var(--gold-medium);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 4rem;
            box-shadow: 0 0 30px rgba(252, 211, 77, 0.2);
            position: relative;
            overflow: hidden;
            transition: all 0.5s ease;
        }

        .character-avatar:hover {
            transform: scale(1.05);
            box-shadow: 0 0 40px rgba(252, 211, 77, 0.4);
        }

        .character-avatar::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle at center, var(--gold-light), transparent 70%);
            animation: rotate 15s linear infinite;
            z-index: -1;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        .stat-item {
            display: flex;
            align-items: center;
            margin-bottom: 0.75rem;
        }

        .stat-bar {
            height: 0.5rem;
            background: rgba(156, 163, 175, 0.2);
            border-radius: 9999px;
            overflow: hidden;
            flex-grow: 1;
            margin-left: 0.75rem;
        }

        .stat-fill {
            height: 100%;
            border-radius: 9999px;
            background: linear-gradient(90deg, var(--gold-medium), var(--gold-dark));
            transition: width 1.5s ease-in;
        }

        .xp-bar {
            height: 0.5rem;
            background: rgba(156, 163, 175, 0.2);
            border-radius: 9999px;
            overflow: hidden;
            margin-top: 0.5rem;
        }

        .xp-fill {
            height: 100%;
            border-radius: 9999px;
            background: linear-gradient(90deg, var(--gold-dark), #FDE68A);
        }

        .timeline-container {
            position: relative;
            padding-left: 2.5rem;
        }

        .timeline-line {
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: linear-gradient(to bottom, 
                transparent, 
                var(--gold-dark), 
                var(--gold-dark), 
                transparent);
            background-size: 100% 200%;
            animation: lineGrow 2s ease-out forwards;
        }

        @keyframes lineGrow {
            from { background-position: 0% 100%; }
            to { background-position: 0% 0%; }
        }

        .timeline-node {
            position: absolute;
            left: -12px;
            width: 28px;
            height: 28px;
            border-radius: 50%;
            background-color: var(--space);
            border: 4px solid var(--gold);
            box-shadow: 0 0 15px var(--gold-medium);
            z-index: 2;
            transition: all 0.3s ease;
        }

        .timeline-node::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 100%;
            width: 2.5rem;
            height: 2px;
            background: linear-gradient(to right, var(--gold-medium), transparent);
            transform: translateY(-50%);
            transition: all 0.3s ease;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 5rem;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.6s ease;
        }

        .timeline-item.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .timeline-item:hover .timeline-node {
            transform: scale(1.1);
            box-shadow: 0 0 20px var(--gold-dark);
        }

        .timeline-item:hover .timeline-node::before {
            width: 3rem;
            background: linear-gradient(to right, var(--gold-dark), transparent);
        }

        .timeline-content {
            background: linear-gradient(145deg, rgba(15, 15, 26, 0.7), rgba(31, 41, 55, 0.4));
            border: 1px solid var(--gold-light);
            border-radius: 1rem;
            padding: 2rem;
            transition: all 0.4s ease;
            backdrop-filter: blur(8px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .timeline-item:hover .timeline-content {
            border-color: var(--gold-medium);
            box-shadow: 0 10px 25px rgba(15, 15, 26, 0.5);
            transform: translateX(5px);
        }

        .timeline-icon {
            font-size: 2.5rem;
            margin-right: 1.5rem;
            flex-shrink: 0;
            text-shadow: 0 0 10px var(--gold-medium);
        }

        .timeline-header {
            margin-bottom: 1.5rem;
        }

        .timeline-title {
            font-size: 1.75rem;
            margin-bottom: 0.25rem;
            letter-spacing: 0.05em;
        }

        .timeline-subtitle {
            font-size: 0.875rem;
            letter-spacing: 0.05em;
        }

        .skill-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.5rem 1rem;
            background: rgba(75, 85, 99, 0.4);
            border: 1px solid var(--gold-light);
            border-radius: 0.5rem;
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
            transition: all 0.3s ease;
        }

        .skill-badge:hover {
            background: rgba(75, 85, 99, 0.6);
            border-color: var(--gold-medium);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(252, 211, 77, 0.2);
        }

        .skill-icon {
            width: 1.5rem;
            height: 1.5rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.5rem;
            background: var(--gold-light);
            color: var(--gold);
            font-size: 0.75rem;
            font-weight: bold;
        }

        .quest-card {
            background: rgba(31, 41, 55, 0.5);
            border: 1px solid rgba(75, 85, 99, 0.3);
            border-left: 3px solid var(--gold);
            transition: all 0.3s ease;
        }

        .quest-card:hover {
            background: rgba(55, 65, 81, 0.5);
            border-color: var(--gold-medium);
            transform: translateY(-3px);
        }

        .action-button {
            display: inline-flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            background: linear-gradient(135deg, var(--gold-light), rgba(252, 211, 77, 0.05));
            border: 1px solid var(--gold-light);
            border-radius: 0.75rem;
            font-size: 0.9375rem;
            font-weight: 500;
            color: var(--gold);
            transition: all 0.3s ease;
        }

        .action-button:hover {
            background: linear-gradient(135deg, var(--gold-medium), var(--gold-light));
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(252, 211, 77, 0.2);
            border-color: var(--gold-dark);
        }

        .action-button svg {
            margin-left: 0.5rem;
            transition: transform 0.3s ease;
        }

        .action-button:hover svg {
            transform: translateX(3px);
        }

        /* Floating animation */
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .floating {
