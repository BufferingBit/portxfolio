        /* Parchment texture */
        .parchment {
            background-image: url('https://www.transparenttextures.com/patterns/old-paper.png');
            background-blend-mode: overlay;
            background-size: 300px;
            background-opacity: 0.1;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .timeline-container {
